<!doctype html>
<html>
<head>
    <title><%= shopName %> - Survey</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1 class="main-title">Customer Satisfaction Survey</h1>
    <form method="POST" action="/submit_survey" class="form-container">
        <label for="first_name">First Name:</label>
        <input id="first_name" type="text" name="first_name">
        <label for="last_name">Last Name:</label>
        <input id="last_name" type="text" name="last_name">
        <label for="email">Email:</label>
        <input id="email" type="email" name="email">
        <label for="age" >How old are you?</label>
        <input id="age" type="text" name="age">
        <label for="chosen_product_category">Which of the following drink categories do you consume?</label>
        <!-- radio buttons -->
        <select id="product_categories" name="chosen_product_category">
            <% productCategories.forEach(function(cat) { %>
                <option value="<%= cat %>"><%= cat %></option>
            <% }); %>
        </select>
        <!-- flex div and align in center both up/side -->
        <div style="display: flex; align-items: center;">
            <label for="student">Are you a student?</label>
            <input id="student" type="checkbox" name="student" value="yes">
        </div>
        <br>
        <div style="text-align: center;"><input type="submit" value="Submit" class="submit-btn"/></div>
    </form>
</body>
</html>