<!doctype html>
<html>
<head>
    <title><%= shopName %> - About</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1 class="main-title">About <%= shopName %></h1>
    <p class="description">We are based in various locations across England.</p>
        <% locations.forEach(function(location) { %>
            <div class ="location-item">
                <div><img src="<%= location.image_url %>" alt="Image of <%= location.name %>" width="300px" height="200px"/></div>
                <div style="margin-left: 20px;">
                <h3><%= location.name %></h3>
                <p><strong>Address:</strong> <%= location.address %></p>
                <p><strong>Manager:</strong> <%= location.shop_manager %></p>
                </div>
            </div>
        <% }); %>
</body>
</html>
